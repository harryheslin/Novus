<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Novus.Views" 
             xmlns:controls="clr-namespace:Novus.Controls"
             x:Class="Novus.MainPage">

    <Shell.FlyoutHeader>
        <controls:FlyoutHeader />
    </Shell.FlyoutHeader>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Units">
            <ShellContent ContentTemplate="{DataTemplate local:UnitPage}" />
        </Tab>
        <Tab Title="Calendar">
            <ShellContent ContentTemplate="{DataTemplate local:Calendar}" />
        </Tab>
    </FlyoutItem>

</Shell>
