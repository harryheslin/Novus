<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Novus.Views.UnitResources"
             xmlns:viewmodel="clr-namespace:Novus.ViewModels"
             >

    <ContentPage.BindingContext>
        <viewmodel:UnitResourcesViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Unit}" TextColor="White" BackgroundColor="{Binding Colour}"></Label>
            <Label Text="{Binding Announcement}" TextColor="Blue" BackgroundColor="gray"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>